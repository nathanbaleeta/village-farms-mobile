<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:id="@+id/textViewAutobiography"
            android:padding="10sp"
            android:text="Autobiography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="#D3D3D3"/>

    <LinearLayout
            android:id="@+id/LinearLayoutFname"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tvFname"
                android:text="Firstname:"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
               />

        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Firstname"
                android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
            android:id="@+id/LinearLayoutSurname"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tvlname"
                android:text="Lastname:"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lastname"
                android:layout_weight="1" />


    </LinearLayout>



    <TextView
            android:id="@+id/tvTitle"
            android:paddingLeft="14sp"
            android:text="Title"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <RadioGroup
                android:id="@+id/rg_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                >

            <RadioButton android:id="@+id/rb_prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof"
                    android:padding="10dp"
                    />
            <RadioButton android:id="@+id/rb_dr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr"
                    android:padding="10dp"
                    />
            <RadioButton android:id="@+id/rb_mr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mr"
                    android:padding="10dp"
                    />
            <RadioButton android:id="@+id/rb_mrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mrs"
                    android:padding="10dp"
                    />

            <RadioButton android:id="@+id/rb_miss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miss"
                    android:padding="10dp"
                    />
            <RadioButton android:id="@+id/rb_col"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Col"
                    android:padding="10dp"
                    />
            <RadioButton android:id="@+id/rb_capt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capt"
                    android:padding="10dp"
                    />
        </RadioGroup>


    </LinearLayout>


    <TextView
            android:id="@+id/tvSex"
            android:padding="14dp"
            android:text="Sex"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

    <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            >
        <RadioButton android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:padding="10dp"
                />
        <RadioButton android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:padding="10dp"
                />
    </RadioGroup>

    <TextView
            android:id="@+id/tvMaritalStatus"
            android:padding="14dp"
            android:text="Marital Status"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <RadioGroup
                android:id="@+id/rg_maritalStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                >
            <RadioButton android:id="@+id/rb_married"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Married"
                    android:padding="10dp"
                    />
            <RadioButton android:id="@+id/rb_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Single"
                    android:padding="10dp"
                    />
            <RadioButton android:id="@+id/rb_widowed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Widowed"
                    android:padding="10dp"
                    />
            <RadioButton android:id="@+id/rb_separated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Separated"
                    android:padding="10dp"
                    />
        </RadioGroup>
    </LinearLayout>

    <TextView
            android:id="@+id/tvLocation"
            android:padding="10sp"
            android:text="Location Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="#D3D3D3"/>

    <LinearLayout
            android:id="@+id/LinearLayoutDistrict"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tvDistrict"
                android:text="District:"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />


        <Spinner
                android:id="@+id/spDistrict"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

        </Spinner>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/LinearLayoutTA"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tvTA"
                android:text="Traditional Authority:"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <Spinner
                android:id="@+id/spTraditionalAuthority"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

        </Spinner>

    </LinearLayout>


    <TextView
            android:id="@+id/tvContacts"
            android:padding="10sp"
            android:text="Contact &amp; Mobile Money Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="#D3D3D3"/>

    <LinearLayout
            android:id="@+id/LinearLayoutPhone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tvPhone"
                android:text="Phone:"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtPhone"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:layout_weight="1"/>

    </LinearLayout>

    <TextView
            android:id="@+id/tvMMRegistered"
            android:padding="14dp"
            android:text="@string/mmRegistered"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

    <RadioGroup
            android:id="@+id/rg_MMRegistered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            >
        <RadioButton android:id="@+id/rb_registered_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:padding="10dp"
                />
        <RadioButton android:id="@+id/rb_registered_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:padding="10dp"
                />
    </RadioGroup>

    <TextView
            android:id="@+id/tvMMPayment"
            android:padding="14dp"
            android:text="@string/mmPayments"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

    <RadioGroup
            android:id="@+id/rg_MMPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            >
        <RadioButton android:id="@+id/rb_payment_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:padding="10dp"
                />
        <RadioButton android:id="@+id/rb_payment_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:padding="10dp"
                />
    </RadioGroup>

    <TextView
            android:id="@+id/textViewFarmDetails"
            android:padding="10sp"
            android:text="Farm History and Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="#D3D3D3"/>

    <LinearLayout
            android:id="@+id/LinearLayoutYearOpened"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tvYearOpened"
                android:text="Year Opened:"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <EditText
                android:id="@+id/txtYearOpened"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Year Established"
                android:focusable="false"
                android:gravity="right"
                android:layout_weight="1"
                />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/LinearLayoutMatureTrees"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tvMatureTrees"
                android:text="Mature Trees:"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />


        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtMatureTrees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="right"
                android:hint="Mature Tree count"
                android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/LinearLayoutImmatureTrees"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tvImmatureTrees"
                android:text="Immature Trees:"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtImmatureTrees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="right"
                android:hint="Immature Tree count"
                android:layout_weight="1"/>
    </LinearLayout>




    <LinearLayout
            android:id="@+id/LinearLayoutHectarage"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tvHectarage"
                android:text="Hectarage:"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtHectarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:gravity="right"
                android:layout_weight="1"
                android:hint="Hectarage cultivated"/>
    </LinearLayout>



    <Button
            android:id="@+id/btnSaveFarmer"
            android:layout_margin="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Farmer"
            android:background="#FFC107" android:textColor="#000000"/>

</LinearLayout>


</ScrollView>