<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/textViewBiodata"
                android:padding="10sp"
                android:text="Biodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="#D3D3D3"/>

        <TextView
                android:id="@+id/tvSaleFname"
                android:text="Firstname:"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtSaleFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Firstname"
                android:layout_margin="18dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/tvSalelname"
                android:text="Lastname:"
                android:textColor="#000000"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtSaleLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:hint="Lastname"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/textViewAddressInfo"
                android:padding="10sp"
                android:text="Address Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="#D3D3D3"/>


        <TextView
                android:id="@+id/tvSaleAddress"
                android:text="Address:"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtSaleLAddress"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="18dp"
                android:hint="Address"
                android:layout_weight="1"
                android:inputType="text|textMultiLine"
                android:gravity="top"/>


        <TextView
                android:id="@+id/tvPhone"
                android:text="Phone:"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtSalePhone"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:hint="Phone"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/tvSaleData"
                android:padding="10sp"
                android:text="Sale Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="#D3D3D3"/>

        <TextView
                android:id="@+id/tvGoodsPurchased"
                android:text="Goods purchased:"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />


        <Spinner
                android:id="@+id/spGoodsPurchased"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:layout_weight="1">

        </Spinner>




        <TextView
                android:id="@+id/tvUnitPrice"
                android:text="Unit Price:"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />


        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtSaleUnitPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="left"
                android:layout_margin="18dp"
                android:hint="Unit Price"
                android:layout_weight="1"/>


        <TextView
                android:id="@+id/tvQty"
                android:text="Quantity"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />


        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtSaleQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="left"
                android:layout_margin="18dp"
                android:hint="Quantity"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/tvTotalPrice"
                android:text="Total Price"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />


        <android.support.design.widget.TextInputEditText
                android:id="@+id/txtSaleTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="left"
                android:layout_margin="18dp"
                android:hint="TotalPrice"
                android:focusable="false"
                android:clickable="false"
                android:layout_weight="1"/>

        <Button
                android:id="@+id/btnSaveSale"
                android:layout_margin="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Sale"
                android:background="#FFC107"
                android:textColor="#000000"/>


    </LinearLayout>


</ScrollView>